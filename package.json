{
  "name": "hugo-blox-academic-cv-starter",
  "version": "1.0.0",
  "private": true,
  "description": "Academic CV starter template for Hugo Blox with Tailwind CSS v3",
  "scripts": {
    "dev": "HUGO_TAILWINDCSS_BINARY=./node_modules/.bin/tailwindcss hugo server --disableFastRender -D",
    "build": "HUGO_TAILWINDCSS_BINARY=./node_modules/.bin/tailwindcss hugo --minify"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.5.10"
  },
  "devDependencies": {
    "autoprefixer": "10.4.21",
    "postcss": "8.5.6",
    "postcss-cli": "10.1.0",
    "tailwindcss": "3.4.14"
  }
}
